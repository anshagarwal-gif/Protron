# Copy to .env and fill in real values. Do not commit .env.

# Database
DB_PASSWORD=your_db_password

# Mail
MAIL_USERNAME=your_sender_email
MAIL_PASSWORD=your_app_password

# JWT
JWT_SECRET=your_long_random_jwt_secret

# App URLs (optional; defaults: frontend http://localhost:5173, backend http://localhost:8282)
# APP_FRONTEND_URL=http://localhost:5173
# APP_BACKEND_URL=http://localhost:8282

# OAuth2 - Google (Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OAuth2 - Microsoft/Azure (Azure Portal app registration)
AZURE_CLIENT_ID=your_azure_application_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=common
